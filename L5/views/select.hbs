<h1 class="text-3xl font-bold underline">{{subject}}</h1>
<form action="/handleSelect" method="get" class="flex flex-col gap-2">
  <select
    name="select"
    class="bg-gray-300 border-2 border-blue-500 w-fit p-2 text-blue-500"
    size="3"
  >
    {{#each fields}}
      <option value="{{name}}">{{name}}</option>
    {{/each}}
  </select>
  <input
    type="submit"
    value="Submit"
    class="bg-gray-300 border-2 border-blue-500 text-blue-500 px-5 py-2 w-fit"
  />
</form>